<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="RatioByWidthView">
        <attr name="ratio" format="float"/>
        <attr name="multiplyRatio" format="float"/>

        <attr name="imageType">
            <enum name="origin" value="0"/>
            <enum name="big" value="1"/>
            <enum name="big_3_2" value="2"/>
        </attr>
    </declare-styleable>


    <style name="QMUI.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme" parent="QMUI.NoActionBar">
        <!--        <item name="android:editTextStyle">@style/EditTextStyle.Rtl</item>-->
        <!--        <item name="android:textViewStyle">@style/TextViewStyle.Rtl</item>-->
        <item name="qmui_common_list_item_chevron">@drawable/icon_black_arrow_right</item>
    </style>

    <style name="MainActivityTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>